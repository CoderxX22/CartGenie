{
  "expo": {
    "name": "CartGenie",
    "slug": "CartGenie",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "cartgenie",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },

    "ios": {
      "supportsTablet": false,
      "infoPlist": {
        "NSCameraUsageDescription": "CartGenie uses the camera to scan receipts.",
        "NSPhotoLibraryUsageDescription": "CartGenie needs access to your photos so you can upload receipt images.",
        "NSPhotoLibraryAddUsageDescription": "CartGenie can save processed images to your library if you choose."
      }
    },
    "android": {
      "usesCleartextTraffic": true,
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "extra": {
      "EXPO_PUBLIC_API_URL": "https://<subdomain>.ngrok-free.app"
    },
    "plugins": [
      "expo-router",
      "expo-splash-screen",
      "expo-secure-store",
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}